{
  "compilerOptions": {
    "declaration": true,
    "target": "es2021",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@/*": ["./*"]
    },
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
  ],
}
